# ------------------------------------------------------------------------------
# Process Flow UI - Environment Configuration
# ------------------------------------------------------------------------------

# --- Application Configuration ---
# The port where the unified application will be accessible
APP_PORT=8090
# The Docker image to use (defaults to local build if not set)
NODE_ENV=production

# --- Database Configuration (PostgreSQL) ---
# External port to access the DB from your host (e.g., for DBeaver/Adminer)
DB_PORT_EXTERNAL=5432

# DB Configuration
DB_HOST=database
DB_PORT=5432
DB_TYPE=postgres

# DB Credentials
DB_NAME=process_flow
DB_USERNAME=postgres
DB_PASSWORD=process_flow_secure_password_replace_me

# --- Advanced DB Configuration ---
DB_SCHEMA=public
# Set to true to automatically sync entities with DB (use when change DB_SCHEMA for problem with typeORM)
# If set to false, the application will run migrations automatically on startup
DB_SYNCHRONIZE=false

